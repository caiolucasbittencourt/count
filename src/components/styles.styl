$bg-color = #121212
$text-primary = #e0e0e0
$text-secondary = #a0a0a0
$border-color = #333333
$cta-bg = #2a2a2a
$cta-border = #444444
$font-sans = "Inter", "Helvetica Neue", sans-serif

.container
  font-family $font-sans
  background-color $bg-color
  color $text-primary
  display flex
  justify-content center
  align-items center
  text-align center
  min-height 100vh
  padding 20px

.main-content
  max-width 500px
  width 100%

.header
  margin-bottom 40px

h1
  font-size 1.75rem
  font-weight 500
  margin-bottom 8px

p
  color $text-secondary
  font-size 1.1rem

.form-group
  margin-bottom 25px
  text-align left

.form-group label
  display block
  font-size 0.9rem
  color $text-secondary
  margin-bottom 10px

select
  width 100%
  background-color $bg-color
  color $text-primary
  border 1px solid $border-color
  border-radius 6px
  padding 14px
  font-size 1rem
  font-family $font-sans
  appearance none
  background-repeat no-repeat
  background-position right 14px center
  background-size 10px

.cta-button
  width 100%
  background-color $cta-bg
  color $text-primary
  border 1px solid $cta-border
  border-radius 6px
  padding 14px
  font-family $font-sans
  font-size 1rem
  font-weight 500
  cursor pointer
  transition background-color 0.2s, border-color 0.2s

.cta-button:hover
  background-color #333
  border-color #555

.counter-text
  font-size 6rem
  font-weight 900
  line-height 1
  margin-bottom 20px
  color #fff

#done-message
  font-size 1.2rem
  margin-bottom 20px

.hidden
  display none

.fade-in
  animation fadeIn 0.8s ease-in-out

@keyframes fadeIn
  from
    opacity 0
    transform translateY(10px)
  to
    opacity 1
    transform translateY(0)

@media (max-width: 480px)
  .counter-text
    font-size 4rem
  h1
    font-size 1.5rem